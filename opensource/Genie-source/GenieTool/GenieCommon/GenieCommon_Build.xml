<project name="GenieCommon" default="GenieCommon.CreateJar" basedir=".">
	<echo message="${ant.project.name}: ${ant.file}:: BaseDir : ${basedir}"/>
	<property name="ant.reuse.loader" value="true"/>
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.5"/>
    <property name="source" value="1.5"/>
    
	<!-- Set the Classpath-->
	<path id="GenieCommon.classpath">
        <pathelement location="bin"/>
	  </path>

	<!-- Cleans the bin area and Create Dummy folder for holding Utils Compiled Classes -->
	<target name="GenieCommon.Clean">
		<echo message="${ant.project.name}:Cleaning the bin area and Creating Dummy folder for GenieCommon Utils Compiled Classes"/>
		<delete includeemptydirs="true" failonerror="false" quiet="true">
		    <fileset dir="${basedir}\bin" includes="**/*"/>
		</delete>
		<mkdir dir="${basedir}\bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
	</target>
	
	<!-- Build Classes for Utils.jar -->	
	<target name="GenieCommon.Compile" depends="GenieCommon.Clean"  description="">
		<echo message="${ant.project.name}:Build Classes for GenieCommon.jar"/>
		<echo message="${ant.project.name}:Build Classes for GenieCommon.jar"/>
		<javac destdir="bin" source="${source}" target="${target}" 
			includes="com/adobe/genie/**/**/**"
			listfiles="false">
			<src path="src"/>
            <classpath refid="GenieCommon.classpath"/>
        </javac>
    </target>
	
	<!-- Bundle the Jar file and do not include JUnit.jar -->	
	<target name="GenieCommon.CreateJar" depends="GenieCommon.Compile">
		<echo message="${ant.project.name}:Build GenieCommon.jar without bundeling Junit"/>
		<jar destfile="GenieCommon.jar" filesetmanifest="mergewithoutmain">
			<manifest>
			    <attribute name="Class-Path" value="."/>
				<attribute name="Implementation-Title" value="Genie (Code Name)"/>
				<attribute name="Implementation-Vendor" value="Adobe Systems Inc"/>
			</manifest>
			<fileset dir="bin"/>
			<fileset dir="${basedir}" includes="assets/**" />
        </jar>
	</target>
</project>
