<project name="GenieCom" default="GenieCom.CreateJar" basedir=".">
	<echo message="${ant.project.name}: ${ant.file}:: BaseDir : ${basedir}"/>
	<property name="ant.reuse.loader" value="true"/>
    <property environment="env"/>
    <property name="UtilityClasses.location" value="../Utils"/>
	<property name="GenieCommon.location" value="../GenieCommon"/>
    <property name="CommonLibs.location" value="../CommonLibs"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.5"/>
    <property name="source" value="1.5"/>

	<property name="UtilityBuild.location" location="${UtilityClasses.location}/Utils_Build.xml"/>
	<import file="${UtilityBuild.location}"/>
	
	<property name="GenieCommonBuild.location" location="${GenieCommon.location}/GenieCommon_Build.xml"/>
		<import file="${GenieCommonBuild.location}"/>
	
	<!-- Set the Classpath -->
	<path id="GenieCom.classpath">
        <pathelement location="bin"/>
        <pathelement location="${UtilityClasses.location}/Utils.jar"/>
		<pathelement location="${GenieCommon.location}/GenieCommon.jar"/>
    </path>

	<!-- Cleans the bin area and Create Dummy folder for holding Utils Compiled Classes -->
	<target name="GenieCom.Clean" description="Cleans the bin area and create dummy folder">
		<echo message="${ant.project.name}:Cleaning the bin area and Creating Dummy folder for holding GenieCom Compiled Classes"/>		
		<delete includeemptydirs="true" failonerror="false" quiet="true">
		    <fileset dir="${basedir}\bin" includes="**/*"/>
		</delete>
		<mkdir dir="${basedir}\bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
	</target>
	
	<!-- Builds the GenieCommon.Jar as it is required for Current Project-->
		<target name="GenieCom.GenieCommonBuild">
	        <echo message="${ant.project.name}:Building Dependent GenieCommon Classes Jar"/>
			<antcall target="GenieCommon.GenieCommon.CreateJar">
				<param name="basedir" value="${GenieCommon.location}" />
			</antcall>
		</target>
	
	<!-- Builds the Utils.Jar as it is required for Current Project-->
	<target name="GenieCom.UtilsBuild">
        <echo message="${ant.project.name}:Building Dependent Utility Classes Jar"/>
		<antcall target="Utils.Utils.CreateJar">
			<param name="basedir" value="${UtilityClasses.location}" />
		</antcall>
	</target>
	
	<!-- Build Classes for GenieCom.jar -->	
	<target name="GenieCom.Compile" depends="GenieCom.Clean,GenieCom.UtilsBuild, GenieCom.GenieCommonBuild"  description="Build Classes for GenieCom.jar">
		<echo message="${ant.project.name}:Build Classes for GenieCom.jar"/>
        <javac destdir="bin" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="GenieCom.classpath"/>
        </javac>
        <!-- This is for building as Debug binaries
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="GenieCom.classpath"/>
        </javac>
        -->
    </target>
	
	<!-- Bundle the Jar file and do not include JUnit.jar -->
	<target name="GenieCom.CreateJar" depends="GenieCom.Compile">
		<echo message="${ant.project.name}:Build GenieCom.jar without bundeling Junit"/>
		<jar destfile="GenieCom.jar">
			<manifest>
				<attribute name="Class-Path" value="."/>
				<attribute name="Implementation-Title" value="Genie (Code Name)"/>
				<attribute name="Implementation-Vendor" value="Adobe Systems Inc"/>
			</manifest>
            <fileset dir="bin"/>
        </jar>
	</target>
</project>
